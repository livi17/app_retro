<!-- add event form -->
<% if logged_in? %>
<div class="add_place none" id="pl">
  <div class="place_form">
    <i class="fa fa-times close_window" id="close"></i>
    <h3>Add Event<span></span></h3>

    <%= form_for(Event.new) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <div class="field">
          <%= f.label :title %><br />
          <%= f.text_field :title, :class => 'form-control', placeholder: "Event title..." %>
        </div>
      </div>

      <div class="field">
        <%= f.text_area :content, placeholder: "Compose new event..." %>
      </div>
      <%= f.submit "Post", class: "btn btn-primary" %>
      <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </span>
      <a href="01.html#" class="green_btn_header" id="add">Add</a>
    <% end %>

  </div>
</div>
<% end %>
<!-- end add event form -->